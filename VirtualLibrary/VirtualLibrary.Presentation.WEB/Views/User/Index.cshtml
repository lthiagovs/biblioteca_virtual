@model BookRequestModel
@using VirtualLibrary.Domain.Models.Library
@using VirtualLibrary.Domain.Models.Person
@{

    var user = TempData["User"] as User;
    var books = TempData["Books"] as List<Book>;
}

<style>
    .card {
        border: none;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .btn-green {
        background-color: #007b33; /* Cor do botão verde */
        color: white; /* Cor do texto */
    }

        .btn-green:hover {
            background-color: #005b26; /* Cor do botão ao passar o mouse */
        }
    /* Estilo da imagem do usuário */
    .user-photo {
        border-radius: 50%;
        margin-right: 20px; /* Espaço entre a foto e as informações */
    }
</style>

<div class="container my-4">
    <div class="d-flex align-items-center">
        <img src="https://via.placeholder.com/100" alt="Foto do Usuário" class="user-photo" width="100" height="100">
        <div>
            @if (user != null)
            {
                <h2>Olá, @user.Name!</h2>
                <p>Email: @user.Email</p>
                <p>@user.Description</p>
                <form method="post">                
                    <button type="submit" asp-action="Logout" class="btn btn-danger ms-2">Sair</button>
                </form>

            }
        </div>
    </div>
</div>

<!-- Seção de Livros Salvos -->
<div class="container my-5">
    <h3>Livros Salvos</h3>
    <div class="mb-3 d-flex">
        <input type="text" class="form-control" id="searchBook" placeholder="Pesquisar por título...">
        <button class="btn btn-green ms-2">Pesquisar</button>
    </div>  
    <div class="row">

        @if(books != null)
        {
            @foreach (Book book in books)
            {
                <div class="col-md-4">
                    <div class="card">
                    <img src="https://via.placeholder.com/250x150" class="card-img-top" alt="Livro 3">
                        <div class="card-body">
                            <form method="post">
                                <input type="text" asp-for="ID" value="@book.ID" style="visibility:hidden;"/>
                                <h5 class="card-title">@book.Title</h5>
                                <p class="card-text">@book.Description</p>
                                <button type="submit" asp-action="Download" class="btn btn-primary w-100">Download</button>
                                <button type="submit" asp-action="Remove" class="btn btn-danger w-100">Remover</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>