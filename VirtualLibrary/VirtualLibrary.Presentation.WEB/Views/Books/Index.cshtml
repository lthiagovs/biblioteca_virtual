@using VirtualLibrary.Domain.Models.Library

@{

    var books = TempData["Books"] as List<Book>;

}

<style>
    .card {
        border: none;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .btn-green {
        background-color: #007b33;
        color: white;
    }

        .btn-green:hover {
            background-color: #005b26;
        }

    .btn-salvo {
        background-color: #007bff;
        color: white;
    }

        .btn-salvo:hover {
            background-color: #0056b3;
        }

    .card-img-top {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .author-photo {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        margin-right: 10px;
    }

    .sidebar {
        width: 250px;
        background-color: #e9ecef;
        padding: 20px;
        margin-right: 20px;
        border-radius: 5px;
    }
</style>

<div class="container my-5 d-flex">
    <div class="sidebar">
        <h4>Categorias</h4>
        <ul class="list-group">
            <li class="list-group-item"><a href="#" class="text-decoration-none">Ficção</a></li>
            <li class="list-group-item"><a href="#" class="text-decoration-none">Não-Ficção</a></li>
            <li class="list-group-item"><a href="#" class="text-decoration-none">História</a></li>
            <li class="list-group-item"><a href="#" class="text-decoration-none">Ciência</a></li>
            <li class="list-group-item"><a href="#" class="text-decoration-none">Fantasia</a></li>
            <li class="list-group-item"><a href="#" class="text-decoration-none">Biografias</a></li>
        </ul>
    </div>
    <div class="flex-fill">
        <h3>Acervo</h3>
        <div class="mb-3 d-flex">
            <input type="text" class="form-control" id="searchBook" placeholder="Pesquisar por título...">
            <button class="btn btn-green ms-2">Pesquisar</button>
        </div>
        <div class="row">
            <div class="col-md-4">
                @if(books != null){
                    @foreach (var book in books)
                    {
                        <div class="card">
                            <img src="https://via.placeholder.com/250x150" class="card-img-top" alt="Livro 1">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-2">
                                    <span>Author</span>
                                </div>
                                <h5 class="card-title">@book.Title</h5>
                                <p class="card-text">@book.Description</p>
                                <button class="btn btn-green">Salvar</button>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
