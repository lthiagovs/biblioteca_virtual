@using VirtualLibrary.Domain.Models.Library
@model BookRequestModel
@{

    var books = TempData["Books"] as List<Book>;
    var categories = TempData["Categories"] as List<Category>;

}

<style>
    .card {
        border: none;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .btn-green {
        background-color: #007b33;
        color: white;
    }

        .btn-green:hover {
            background-color: #005b26;
        }

    .btn-salvo {
        background-color: #007bff;
        color: white;
    }

        .btn-salvo:hover {
            background-color: #0056b3;
        }

    .card-img-top {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .author-photo {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        margin-right: 10px;
    }

    .sidebar {
        width: 250px;
        background-color: #e9ecef;
        padding: 20px;
        margin-right: 20px;
        border-radius: 5px;
    }
</style>

<div class="container my-5 d-flex">
    <div class="sidebar">
        <h4>Categorias</h4>
        @if (categories != null)
        {
            <ul class="list-group">
            @foreach (Category category in categories)
            {
                    <li class="list-group-item"><a href="#" class="text-decoration-none">@category.Name</a></li>
            }
            </ul>
        }
    </div>
    <div class="flex-fill">
        <h3>Acervo</h3>
        <form method="post">
            <div class="mb-3 d-flex">
                <input type="text" asp-for="Title" class="form-control" id="searchBook" placeholder="Pesquisar por título...">
                <button type="submit" asp-action="Search" class="btn btn-green ms-2">Pesquisar</button>
            </div>
        </form>
        <div class="row">
            @if (books != null)
            {
                foreach (var book in books)
                {
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <img src="~/files/@(book.AuthorID + book.Title + ".png")" class="card-img-top" alt="Livro 1">
                            <div class="card-body">
                                @if (book.Author != null)
                                {
                                    <div class="d-flex align-items-center mb-2">
                                        <span>@book.Author.Name</span>
                                    </div>
                                }
                                <form method="post">
                                    <input type="text" asp-for="ID" value="@book.ID" style="visibility:hidden;"/>
                                    <h5 class="card-title">@book.Title</h5>
                                    <p class="card-text">@book.Description</p>
                                    <button type="submit" asp-action="SaveBook"  class="btn btn-green">Salvar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

