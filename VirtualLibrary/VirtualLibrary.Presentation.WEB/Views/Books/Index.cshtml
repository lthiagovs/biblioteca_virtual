@using VirtualLibrary.Domain.Models.Library
@model BookRequestModel
@{
    var books = TempData["Books"] as List<Book>;
    var categories = TempData["Categories"] as List<Category>;
}

<style>
    .card {
        border: none;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 300px; /* Altura fixa para os cards */
    }

    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .card-img-top {
        width: 100%;
    }

        .btn-green {
        background-color: #007b33;
        color: white;
    }

        .btn-green:hover {
            background-color: #005b26;
        }

    .btn-salvo {
        background-color: #007bff;
        color: white;
    }

        .btn-salvo:hover {
            background-color: #0056b3;
        }

    .sidebar {
        width: 250px;
        background-color: #e9ecef;
        padding: 20px;
        margin-right: 20px;
        border-radius: 5px;
    }

    .pagination {
        justify-content: center;
        padding-top: 20px;
    }

    .card-text {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2; /* Limita o texto a 2 linhas */
        -webkit-box-orient: vertical;
    }
</style>

<div class="container my-5 d-flex">
    <div class="sidebar">
        <h4>Categorias</h4>
        @if (categories != null)
        {
            <ul class="list-group">
                @foreach (Category category in categories)
                {
                    <li class="list-group-item">
                        <a href="#" class="text-decoration-none">@category.Name</a>
                    </li>
                }
            </ul>
        }
    </div>

    <div class="flex-fill">
        <h3>Acervo</h3>
        <form method="post">
            <div class="mb-3 d-flex">
                <input type="text" asp-for="Title" class="form-control" id="searchBook" placeholder="Pesquisar por título...">
                <button type="submit" asp-action="Search" class="btn btn-green ms-2">Pesquisar</button>
            </div>
        </form>

        <div class="row">
            @if (books != null)
            {
                @foreach (var book in books)
                {
                    <div class="col-md-4 d-flex align-items-stretch">
                        <div class="card mb-4">
                            <img src="~/files/@(book.AuthorID + book.Title + ".png")" style="height:100px;" class="card-img-top" alt="Imagem do Livro">
                            <div class="card-body d-flex flex-column">
                                @if (book.Author != null)
                                {
                                    <div class="d-flex align-items-center mb-2">
                                        <span>@book.Author.Name</span>
                                    </div>
                                }
                                <form method="post" class="mt-auto">
                                    <input type="text" asp-for="ID" value="@book.ID" style="visibility:hidden;" />
                                    <h5 class="card-title">@book.Title</h5>
                                    <p class="card-text">@book.Description</p>
                                    <button type="submit" asp-action="SaveBook" class="btn btn-green">Salvar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <!-- Paginação -->
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= 10; i++)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
